<div class='artist-container'>
  <div class = "cover-page">
    <div class = "artist-main">
      <div class = "divider"></div>
      <div class = "artist-info">
        <div class = "artist-name">
          <%= @resultsArtist.name %>
        </div>
        <div class = "artist-genre">
          <% str = "" %>
          <% @resultsArtist.genres.each do |genre| %>
            <% str += genre + ", " %>
          <% end %>
          <%= str[0...-2] %>
        </div>
        <button class = "more-btn">More</button>
      </div>
    </div>

    <img class = "artist-image" src=<%= @resultsArtist.images[0]['url'] %>>
  </div>
</div>

<div class = "artist-stats">
  <div class = "reviewed-songs-container">
    <div class = "reviews-title">Most Reviewed Songs</div>
    <div class = "title-divider"></div>
    <ul class = "reviewed-songs">
      <% @top_tracks.each do |track| %>
        <li class = "song-item">
          <div class = "song-info">
            <div class = "rating-box-artist"> <%= render "partials/rating-box", data: 10 %></div>
            <div class = "song-name"><%= track.name %></div>
          </div>
          <%= link_to "Reviews", song_review_path(track.id), class: "song-reviews" %>
        </li>
      <% end %>
    </ul>
    <div class = "show-more-icon">
      <i class="fa-solid fa-circle-chevron-down"></i>
    </div>
  </div>

  <div class = "reviewed-albums-container">
    <div class = "reviews-title">Most Reviewed Albums</div>
    <div class = "title-divider"></div>
    <ul class = "reviewed-albums">
      <% @top_albums.each do |album|  %>
        <li class = reviewed-albums-item>
          <img class = "albums-review-img"src = <%= album.images[0]['url']%> />

          <div class = "reviewed-album-title"><%= link_to album.name, album_review_path(album.id)%></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
