<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 class="mb-5">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, class:"radio", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions d-flex justify-content-start align-items-center">
          <%= f.button :submit, "Log in", class: 'btn-main px-5 rounded mr-5' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"btn-alt py-1 px-5" %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
